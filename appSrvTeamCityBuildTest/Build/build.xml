<?xml version="1.0" encoding="UTF-8"?>
<project name="teamcity-build" default="build">
	<property file="build.properties"/>
	<property name="datadir" value="../../"/>
	<target name="build">
		<echo message="Building bar..."/>
		<exec executable="${iib.toolkit}/mqsicreatebar">
			<arg value="-data"/>
			<arg value="${datadir}"/>
			<arg value="-b"/>
			<arg value="${bar.name}"/>
			<arg value="-a"/>
			<arg value="${appname}"/>
			<arg value="-deployAsSource"/>
		</exec>
		<echo message="Bar builded..."/>
		<echo message="Applying bar overrides..."/>
		<exec executable="cmd">
			<arg value="baroverride.bat"/>
			<arg value="${bar.name}"/>
			<arg value="${properties}"/>
		</exec>
		<echo message="Bar ovverriden..."/>
		<echo message="Deploying bar..."/>
		<!--<exec executable="${iib.path}/mqsiprofile.cmd">
			<arg line="'${iib.path}/mqsideploy' ${iib.broker} '-e' ${iib.server} '-a' ${bar.name}"/>
		</exec> -->
		
		 <exec executable="cmd" >
        <arg value="-c"/>
        <arg value="${iib.path}/mqsiprofile.cmd;${iib.path}/mqsideploy' ${iib.broker} '-e' ${iib.server} '-a' ${bar.name}"/>
        </exec>
		<echo message="Bar file deployed..."/>
	</target>
</project>
